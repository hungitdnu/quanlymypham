@model SellingShop.Models.mypham

<form action="/MyPham/Edit" method="post" enctype="multipart/form-data">
    <div class="shop-detail-box-main">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-6">
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/Content/images/myphams/@Model.ImageTitle" style="max-width:415px;max-height:490px;">
                            </div>
                            @foreach (string ImageUrl in Model.ImageLists.Split(','))
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/Content/images/myphams/@ImageUrl" style="max-width:415px;max-height:490px;">
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                            <i class="fa fa-angle-left" aria-hidden="true"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                            <span class="sr-only">Next</span>
                        </a>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="/Content/images/myphams/@Model.ImageTitle" style="max-width : 87px; max-height : 108px;">
                            </li>
                            @foreach (string ImageUrl in Model.ImageLists.Split(','))
                            {
                                <li data-target="#carousel-example-1" data-slide-to="0" class="">
                                    <img class="d-block w-100 img-fluid" src="/Content/images/myphams/@ImageUrl" style="max-width : 87px; max-height : 108px;">
                                </li>
                            }
                        </ol>
                    </div>
                </div>
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <input type="hidden" value="@Model.ID" name="ID"/>
                        <h3>Tên sách : </h3>
                        <input type="text" class="form-control" style="max-width : 80%;" value="@Model.TenMP" name="TenMP">
                        <div style="margin: 1% 0;">
                            <h3>Giá gốc : </h3>
                            <input type="text" class="form-control" style="max-width : 80%;" value="@Model.GiaGoc" name="GiaGoc">
                        </div>
                        <div style="margin: 1% 0;">
                            <h3>Giá sale : </h3>
                            <input type="text" class="form-control" style="max-width : 80%;" value="@Model.GiaSale" name="GiaSale">
                        </div>
                        <h4>Short Description:</h4>
                        <textarea class="form-control" rows="4" cols="55" name="MoTa">@Model.MoTa</textarea>
                        <ul style="margin: 2% 0;">
                            <li>
                                <div class="form-group quantity-box">
                                    <label class="control-label">Số lượng</label>
                                    <input class="form-control" value="@Model.SoLuong" min="0" max="10000" type="number" name="SoLuong">
                                </div>
                            </li>
                        </ul>
                        <div style="margin : 1% 0;">
                            <h3>Danh sách ảnh </h3>
                            <input class="form-control" type="file" id="formFile" multiple="multiple" name="ImageTitle">
                        </div>
                        <div class="price-box-bar">
                            <div class="cart-and-bay-btn">
                                <input style="padding : 10px 20px;" type="submit" class="btn btn-primary" value="Edit">
                                <a class="btn btn-danger" href="/MyPham/Remove?id=@Model.ID">Remove this product</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>