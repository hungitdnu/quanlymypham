<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Content/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/css/bootstrap.min.css")
    <!-- Site CSS -->
    @Styles.Render("~/Content/css/style.css")
    <!-- Responsive CSS -->
    @Styles.Render("~/Content/css/responsive.css")
    <!-- Custom CSS -->
    @Styles.Render("~/Content/css/custom.css")

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.~/Content/js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <!-- Header -->
    <div class="container">
        <div class="navbar">
            <div class="logo">
                <a href="/"><img src="~/Content/images/logo.png" alt="logo" width="125"></a>
            </div>
            <nav>
                <ul id="MenuItems">
                    <li><a href="/">Home</a></li>
                    <li><a href="/MyPham">Products</a></li>
                    <li><a href="/MyPham/Add">Add Product</a></li>
                    <li><a href="/Home/ContactUs">Contact</a></li>
                    <li><a href="/Account/MyAccount">Account</a></li>
                    <li><a href="/Account/Logout">Logout</a></li>

                </ul>
            </nav>
            <a href="/Account/Cart"><img src="~/Content/images/cart.png" width="30" height="30"></a>
            <img src="images/menu.png" class="menu-icon" onclick="menutoggle()">
        </div>
    </div>

    @RenderBody()

    <!-- Footer -->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col-1">
                    <h3>Download Our App</h3>
                    <p>Download App for Android and ios mobile phone.</p>
                    <div class="app-logo">
                        <img src="~/Content/images/play-store.png">
                        <img src="~/Content/images/app-store.png">
                    </div>
                </div>
                <div class="footer-col-2">
                    <img src="~/Content/images/logo-white.png">
                    <p>
                        Our Purpose Is To Sustainably Make the Pleasure and Benefits of Sports Accessible to the Many.
                    </p>
                </div>
                <div class="footer-col-3">
                    <h3>Useful Links</h3>
                    <ul>
                        <li>Coupons</li>
                        <li>Blog Post</li>
                        <li>Return Policy</li>
                        <li>Join Affiliate</li>
                    </ul>
                </div>
                <div class="footer-col-4">
                    <h3>Follow Us</h3>
                    <ul>
                        <li>Facebook</li>
                        <li>Twitter</li>
                        <li>Instagram</li>
                        <li>Youtube</li>
                    </ul>
                </div>
            </div>
            <hr>
            <p class="copyright">Copyright 2023 - DNU</p>
        </div>
    </div>

    <!-- javascript -->

    <script>
        var MenuItems = document.getElementById("MenuItems");
        MenuItems.style.maxHeight = "0px";
        function menutoggle() {
            if (MenuItems.style.maxHeight == "0px") {
                MenuItems.style.maxHeight = "200px"
            }
            else {
                MenuItems.style.maxHeight = "0px"
            }
        }
    </script>
    @RenderSection("Scripts", false/*required*/)
    <!-- ALL JS FILES -->
    <script src="~/Content/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- ALL PLUGINS -->
    <script src="~/Content/js/jquery.superslides.min.js"></script>
    <script src="~/Content/js/bootstrap-select.js"></script>
    <script src="~/Content/js/inewsticker.js"></script>
    <script src="~/Content/js/bootsnav.js"></script>
    <script src="~/Content/js/images-loded.min.js"></script>
    <script src="~/Content/js/isotope.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/baguetteBox.min.js"></script>
    <script src="~/Content/js/form-validator.min.js"></script>
    <script src="~/Content/js/contact-form-script.js"></script>
    <script src="~/Content/js/custom.js"></script>
    <script>
        $('.custom-file input').onchange = (function (e) {
            if (e.target.files.length) {
                $(this).next('.custom-file-label').html(e.target.files[0].name.substring(0, 20) + "." + e.target.files[0].name.split('.').pop());
                $('.avatar').src = URL.createObjectURL(e.target.files[0]);
            }
        });
    </script>

</body>

</html>